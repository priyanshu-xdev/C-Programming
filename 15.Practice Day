Print all even numbers from 1 to n.

#include <stdio.h>
int main()
{
    int n;
    printf("Enter a Number:");
    scanf("%d", &n);
    for (int i = 1; i <= n; i++)
    {
        if (i % 2 == 0)
        {
            printf("%d", i);
        }
    }
    return 0;
}


Sum of all numbers from 1 to n.

#include <stdio.h>
int main()
{
    int n, sum = 0;
    printf("Enter a Number:");
    scanf("%d", &n);
    for (int i = 1; i <= n; i++)
    {
        sum = sum + i;
    }
    printf("Sum=%d", sum);
    return 0;
}

Calculate the factorial of a given number.

#include <stdio.h>
int main()
{
    int n, fact = 1, count;
    printf("Enter a number:");
    scanf("%d", &n);
    for (count = 1; count <= n; count++)
    {
        fact = fact * count;
    }
    printf("Factorial is %d", fact);
    return 0;
}




